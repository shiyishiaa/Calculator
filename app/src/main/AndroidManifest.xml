<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.norman.calculator">

    <application
        android:allowBackup="false"
        android:icon="@drawable/calculator"
        android:label="@string/app_name"
        android:roundIcon="@string/app_name"
        android:supportsRtl="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:theme="@style/ColorTranslucentTheme">
        <activity android:name=".action.preConfig">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".action.stdCalculator" />
        <activity android:name=".action.sciCalculator" />
    </application>

</manifest>